{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2017",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@polkadot/types/augment": [
        "../types/augment-codec/augment-types.ts"
      ]
    },
    "skipLibCheck": true
  },
  "esModuleInterop": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}